<h1 style="color: #747472">Listing efforts</h1>
<%= button_to 'New effort', new_effort_path %>
<%= button_to "Report", {:controller => :efforts, :action => :report} %>

<table width="50%">
  <tr style="background-color: #ff7472">
    <th>User</th>
    <th>Task</th>
    <th>Date</th>
    <th colspan="3">Links</th>
  </tr>

<% @efforts.each do |effort| %>
  <tr>
    <td><%=h @userOptions[effort.user_id] %></td>
    <td><%=h @taskOptions[effort.task_id] %></td>
    <td><%=h effort.task_date %></td>
    <td><%= link_to 'Show', effort %></td>
    <td><%= link_to 'Edit', edit_effort_path(effort) %></td>
    <td><%= link_to 'Destroy', effort, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
